<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Agency_PO_Req_for_Agency_PO_Number</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK( Agency_PO_Number__c )),
 (ISPICKVAL(Agency_PO__c, &quot;&quot;) || ISPICKVAL(Agency_PO__c, &quot;No&quot;)))</errorConditionFormula>
    <errorDisplayField>Agency_PO_Number__c</errorDisplayField>
    <errorMessage>Agency PO Number should be filled only if value in Agency PO field is Yes.</errorMessage>
</ValidationRule>
